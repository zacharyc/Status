<% title("Edit Note") %>
<h1>Editing Note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

	<p>
		<h2>Project:</h2>
		<%= Project.find(@note.project_id).name %>
	</p>
	
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</p>
	
	<p>
		<%= f.submit "Update" %>
	</p>
<% end %>

<%= link_to 'Back', projects_path %>