<% title("Project: #{@project.name}") %>

<h1>Editing project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>		
	</p>
	
	<p>
		<%= f.label :active %>
		<%= f.check_box :active %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>